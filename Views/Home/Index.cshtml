<style>


    body {
        background-color: black;
        color: white;
    }

    .animation-container {
        height: 200px;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .tutorial-animation {
        font-family: 'Roboto', sans-serif;
        font-size: 48px;
        color: #fff;
        animation-name: tutorialAnimation;
        animation-duration: 2s;
        animation-iteration-count: infinite;
        animation-timing-function: ease-in-out;
    }

    .Home h1 {
        font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;
        text-align: center;
        font-size: 60px;
        word-spacing: 8px;
        animation: moveUpDown 2s ease-in-out infinite alternate;
    }

    .Home h2 {
        text-align: center;
        margin-top: 20px;
        font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
        margin-bottom: 100px;
    }

    img {

        margin: 30px;
        width: 550px;
        height: 300px;
        transition: 0.7s;
    }


    img:hover {
        transform: scale(1.1);
    }

    .title-imgs {
        font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;
        text-align: center;
        font-size: 40px;
        word-spacing: 8px;
        margin-bottom: 30px;
    }

    .Contenedor {
        display: flex;
        justify-content: center;
        text-align: center;
    }
</style>



